<h1>New election</h1>

<% form_for(@election) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :blurb %><br />
    <%= f.text_area :blurb %>
  </p>
  <p>
    <%= f.label :start %><br />
    <%= f.datetime_select :start %>
  </p>
  <p>
    <%= f.label :end %><br />
    <%= f.datetime_select :end %>
  </p>
  <p>
    <%= f.label :eligible_year %><br />
    <%= f.text_field :eligible_year %>
  </p>
  <p>
    <%= f.label :eligible_discipline %><br />
    <%= f.text_field :eligible_discipline %>
  </p>
  <p>
    <%= f.label :preferential %><br />
    <%= f.check_box :preferential %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', elections_path %>