!!! Strict

%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")

%head
	%meta(http-equiv="content-type" content="text/html;charset=UTF-8")

	%title= "SkuleVote : "+controller.controller_name+" : "+controller.action_name

	= stylesheet_link_tag 'screen.css'
	= javascript_include_tag :defaults
	= javascript_include_tag 'custom.js'
	= javascript_tag "window._token = '#{form_authenticity_token}';" if protect_against_forgery?
	
	- if controller.action_name == "vote"
		%script(type="text/javascript")
			Event.observe(window, 'load', vote_system);
  			
%body
	%p(style="color: green")= flash[:notice]
	
	%h1 SkuleVote
	
	%ul#menu
		%li= link_to "Home", "/"
		%li= link_to "Help", "#", :id => 'help'
		%li= link_to "Sign Out", "#"

	%div#content
		= yield
		%br(style="clear: both")
